<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="school-database" transaction-type="RESOURCE_LOCAL">
        <class>dev.rvz.escola.domain.studant.Studant</class>
        <class>dev.rvz.escola.domain.studant.Contact</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/school"/>
            <property name="javax.persistence.jdbc.user" value="school"/>
            <property name="javax.persistence.jdbc.password" value="school"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>